@using Padmate.ServicePlatform.Service;
@using Padmate.ServicePlatform.Models;
@using System.Configuration;
@using Microsoft.AspNet.Identity
@using Padmate.ServicePlatform.Utility;
@{
    B_Mail bMail = new B_Mail();
    int unSendMailNum = bMail.GetAllUnSendMail().Count();
    var urlRewriteExtension = ConfigurationManager.AppSettings["UrlRewriteExtension"];
}

<link href="~/Content/CustomerMenu.css" rel="stylesheet">
<script src="~/Scripts/CustomerMenu.js"></script>


<script src="~/ckfinder/ckfinder.js"></script>
<script src="~/ckeditor/ckeditor.js"></script>

<style>
    .systemtip{
        color:red;
        font-size:medium;
        font-weight:bold;
        padding:3px;
    }
</style>
<div class="menu-sidebar" id="accordion">
    <div class="menu-sidebar-nav">
        <ul>
            <li>
                <a class="menu-first" href="@string.Format("/manage/homebackground{0}", urlRewriteExtension)">
                    <i class="fa fa-image"></i>
                    首页图片
                </a>
            </li>
            <li>
                <a data-toggle="collapse" data-parent="#accordion" class="menu-first" href="#servicemanage">
                    <i class="fa fa-cogs"></i>
                    服务管理
                    <span class="fa fa-chevron-left"></span>
                </a>
                <ul id="servicemanage" class="panel-collapse collapse menu-second">
                    <li>
                        <a href="@string.Format("/manage/servicemarket{0}", urlRewriteExtension)" )">
                            <i class="fa fa-cubes"></i>
                            市场平台
                        </a>
                    </li>
                    <li>
                        <a href="@string.Format("/manage/zzproject{0}", urlRewriteExtension)">
                            <i class="fa fa-cubes"></i>
                            产品-众创项目
                        </a>

                    </li>
                    <li>
                        <a href="@string.Format("/manage/serviceengineer{0}", urlRewriteExtension)" )">
                            <i class="fa fa-cubes"></i>
                            工程平台
                        </a>
                    </li>
                </ul>
            </li>
            <li>
                <a data-toggle="collapse" data-parent="#accordion" class="menu-first" href="#activitymanage">
                    <i class="fa fa-cogs"></i>
                    活动管理
                    <span class="fa fa-chevron-left"></span>
                </a>
                <ul id="activitymanage" class="panel-collapse collapse menu-second">
                    <li>
                        <a href="@string.Format("/manage/activityforecast{0}", urlRewriteExtension)">
                            <i class="fa fa-cubes"></i>
                            活动预告
                        </a>
                    </li>
                    <li>
                        <a href="@string.Format("/manage/wonderfulactivity{0}", urlRewriteExtension)">
                            <i class="fa fa-cubes"></i>
                            精彩活动
                        </a>
                    </li>
                </ul>
            </li>
            <li>
                <a class="menu-first" href="@string.Format("/manage/information{0}", urlRewriteExtension)">
                    <i class="fa fa-info"></i>
                    资讯管理
                </a>
            </li>
            <li>

                <a data-toggle="collapse" data-parent="#accordion" class="menu-first" href="#usermanage">
                    <i class="fa fa-cogs"></i>
                    用户管理
                    <span class="fa fa-chevron-left"></span>
                </a>
                <ul id="usermanage" class="panel-collapse collapse menu-second">
                    @if (User.IsInRole(SystemRole.SystemAdmin))
                    {
                        //系统管理员才有权限
                        <li>
                            <a href="@string.Format("/manage/rolemanage{0}", urlRewriteExtension)">
                                <i class="fa fa-angle-double-up"></i>
                                角色管理
                            </a>
                        </li>

                    }
                    
                    <li>
                        <a href="@string.Format("/manage/usermanage{0}", urlRewriteExtension)">
                            <i class="fa fa-user-md"></i>
                            用户管理
                        </a>
                    </li>
                </ul>

            </li>
            <li>
                <a data-toggle="collapse" data-parent="#accordion" class="menu-first" href="#contactmanage">
                    <i class="fa fa-cogs"></i>
                    联系人管理
                    <span class="fa fa-chevron-left"></span>
                </a>
                <ul id="contactmanage" class="panel-collapse collapse menu-second">
                    <li>
                        <a href="@string.Format("/manage/contactscope{0}", urlRewriteExtension)">
                            <i class="fa fa-angle-double-up"></i>
                            职责范围
                        </a>
                    </li>
                    <li>
                        <a href="@string.Format("/manage/contactinfo{0}", urlRewriteExtension)">
                            <i class="fa fa-user-md"></i>
                            联系人信息
                        </a>
                    </li>
                </ul>
            </li>
            <li>
                <a class="menu-first" href="@string.Format("/manage/mail{0}", urlRewriteExtension)">
                    <i class="fa fa-envelope"></i>
                    系统邮件
                    @if (unSendMailNum > 0)
                    {
                        <sup class="systemtip">@unSendMailNum</sup>
                    }
                </a>
            </li>
            <li>
                <a class="menu-first" href="@string.Format("/manage/intel-innovation-project-apply{0}", urlRewriteExtension)">
                    <i class="fa fa-compass"></i>
                    英特尔大赛申请
                    
                </a>
            </li>
        </ul>
        
    </div>


</div>
