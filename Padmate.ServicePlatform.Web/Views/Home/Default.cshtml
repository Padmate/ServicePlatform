<!-- Header -->
<header>
    <div id="headbg-img" class="carousel slide">
        <!-- 轮播（Carousel）指标 -->
        <ol class="carousel-indicators">
            @for (int i = 0; i < homebgImages.Count; i++)
            {
                var activeClass = "";
                if (i == 0)
                {
                    activeClass = "active";
                }
                <li data-target="#headbg-img" data-slide-to="@i" class="blackfont @activeClass"></li>
            }
        </ol>
        <!-- 轮播（Carousel）项目 -->
        <div class="carousel-inner">
            @for (int i = 0; i < homebgImages.Count; i++)
            {
                var activeClass = "";
                if (i == 0)
                {
                    activeClass = "active";
                }
                <div class="item @activeClass">
                    <img class="img-responsive" src="@homebgImages[i].VirtualPath" alt="@homebgImages[i].Name.Split('.').First()">

                </div>
            }

        </div>
        @if (homebgImages.Count > 1)
        {
            //超过一张才需要轮播导航按钮
            <!-- 轮播（Carousel）导航 -->
            <a class="carousel-control" href="#headbg-img"
               data-slide="prev"><span class="icon-prev" style="font-size: 50px; top: 70%;"></span></a>
            <a class="carousel-control" style="right:0;left:auto;" href="#headbg-img"
               data-slide="next"><span class="icon-next" style="font-size: 50px; top: 70%;"></span></a>
        }

    </div>

