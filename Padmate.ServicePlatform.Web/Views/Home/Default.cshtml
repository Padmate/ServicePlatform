<script>

    //判断浏览器是否支持HTML5
    var isBrowserSupportH5 = window.applicationCache;
    $(function () {
        InitSuspendedBtn();
        InitCarousel();
        //InitCollapse();
        //InitSlick();
        //InitTabPanel();
        InitialModal();
        InitSuperSlider();
        
        if (isBrowserSupportH5) {
            ServiceHover();

        }

        //粒子系统
        $('#particles').particleground({
            dotColor: 'rgba(190, 190, 153, 0.81)',
            lineColor: 'rgba(190, 190, 153, 0.81)',
            directionY:'up'
        });
        //为relative父级div赋值absolute高度
        sliderheight();
        $(window).resize(sliderheight);
    })
    
    
    function ServiceHover()
    {
        $(".service-col").bind('mouseenter', function () {
            $(this).addClass("animated flipInX");
            var current = $(this);
            //删除出选中div外的其它div的特效
            $(".service-col").each(function () {
                if (current.html() != $(this).html())
                {
                    $(this).removeClass("animated flipInX");
                }
            });

            //为service-more 设置高度
            var divHeight = $(this).height();
            $('.service-more').css({ 'height': divHeight });

            $(this).find(".image-section").hide(50);
            $(this).find(".service-more").show(50);
        });

        $(".service-col").bind('mouseleave',function () {
           // $(this).removeClass("animated flipInY");
            $(".image-section").show();
            $(".service-more").hide();
        });
        //$(".service-col").hover(function () {
            
        //    $(this).addClass("animated flipInY");
        //    $(this).find(".image-section").hide();
        //    $(this).find(".service-more").show();
        //},
        //function () {
        //    $(this).removeClass("animated flipInY");
        //    $(".image-section").show();
        //    $(".service-more").hide();

        //});
    }

    function sliderheight() {
        divHeight = $('.service-intro').height();
        $('#particles').css({ 'height': divHeight });
    }

       
    //初始化模态框事件
    function InitialModal() {
        //模态宽显示时，隐藏侧边栏和返回顶部按钮
        $('.modal').on('show.bs.modal', function () {
            $(".suspendedList").hide();
            $(".nav-right-float").hide();
        })

        //模态框关闭时，恢复侧边栏和返回顶部按钮
        $('.modal').on('hide.bs.modal', function () {
            $(".suspendedList").show();
            $(".nav-right-float").show();

        })

    }

    //初始化侧边栏收缩按钮
    function InitSuspendedBtn() {
        $(".suspendedBtn").click(function () {

            //获取侧边栏相对于left的大小
            var leftPosition = $(".suspendedList").position().left;
            if (leftPosition < 0) {
                //展开
                $(".suspendedList").animate({ left: "0px" }, 500);
                $(".suspendedBtn").find("i").removeClass("fa-chevron-right");
                $(".suspendedBtn").find("i").addClass("fa-chevron-left");
            } else {
                //收起
                $(".suspendedList").animate({ left: "-130px" }, 500);
                $(".suspendedBtn").find("i").removeClass("fa-chevron-left");
                $(".suspendedBtn").find("i").addClass("fa-chevron-right");
            }
        });
    }

    //初始化轮播图片
    function InitCarousel() {
        $('#headbg-img').carousel({
            interval: 6000,
            pause: 'cycle'
        });

       
    }

    //初始化一行多图轮播
    function InitSuperSlider()
    {
        /* 图片滚动效果 */
        $(".mr_frbox").slide({
            titCell: "",
            mainCell: ".mr_frUl ul",
            autoPage: true,
            effect: "leftLoop",
            autoPlay: true,
            triggerTime: 100,
            interTime: 2000,
            vis: 3
        });

        //$(".mr_frbox").slide({
        //    mainCell: ".mr_frUl ul",
        //    autoPlay: true,
        //    effect: "leftMarquee",
        //    vis: 3,
