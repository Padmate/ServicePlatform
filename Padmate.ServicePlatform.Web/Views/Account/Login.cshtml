@{
    Layout = null;
}
@using Padmate.ServicePlatform.Models;
@model LoginViewModel

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    @*<meta http-equiv="X-UA-Compatible" content="E=EmulateIE7">*@
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="keywords" content="@ViewBag.Keywords" />
    <meta name="description" content="@ViewBag.Description">
    <meta name="author" content="">
    
    <title>登录-厦门智能﹢创新创业公共服务平台</title>
    <link rel="shortcut icon" href="~/img/logos/favicon.ico" />
    <link rel="stylesheet" href="~/Content/login-style.css">
    <script src="~/Scripts/jquery.js"></script>
    <script src="~/Scripts/jquery.placeholder.js"></script>

    <!-- Custom Fonts -->
    <link rel="stylesheet" href="~/fonts/font-awesome/css/font-awesome.min.css">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
      <script src="http://cdn.bootcss.com/html5shiv/3.7.3/html5shiv.min.js"></script>
      <script src="http://cdn.bootcss.com/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
  
</head>




<body>
    <div class="container">
    <div class="row">
        <div class="col-md-4 col-md-offset-4">
            <div id="content">
                @using (Html.BeginForm("Login", "Account", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                {
                    @Html.AntiForgeryToken()

                    <h1>欢迎登录智能+</h1>
                    <hr />
                    @Html.ValidationSummary(true, null, new { @class = "login-tip" })
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.TextBoxFor(m => m.UserName, new { @placeholder = "用户名", @class = "username" })
                            <br />
                            @Html.ValidationMessageFor(m => m.UserName, null, new { @class = "login-tip" })
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-10">
                            @Html.PasswordFor(m => m.Password, new { @placeholder = "密 码", @class = "password" })
                            <br />
                            @Html.ValidationMessageFor(m => m.Password, null, new { @class = "login-tip" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10 left">
                            <div class="checkbox">
                                @Html.CheckBoxFor(m => m.RememberMe)
                                @Html.LabelFor(m => m.RememberMe)
                            </div>
                        </div>
                        <div style="clear:both"></div>

                    </div>
                    <div class="form-group">
                        <input type="submit" value="登录" />
                        <a href="/">回到首页</a>
                        <a href="/Account/Register">注 册</a>
                    </div>
                }
            </div>
        </div>
    </div>
        <!-- content -->
    </div><!-- container -->
    <div class="col-md-4">
        <div id="socialLoginForm" style="display:none">
            @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel(){ ReturnUrl = ViewBag.ReturnUrl })
        </div>
    </div>
</body>

</html>
<script>
    $(function () {
        // Invoke the plugin
        $('input, textarea').placeholder({ customClass: 'my-placeholder' });

    });
</script>