@using System.Configuration;
@using Padmate.ServicePlatform.Models;
@using Padmate.ServicePlatform.Utility;
@{
    M_Article article = (M_Article)ViewData["article"];
    M_Article previousArticle = (M_Article)ViewData["PreviousArticle"];
    M_Article nextArticle = (M_Article)ViewData["NextArticle"];
    
    ViewBag.Title = article.SubTitle;
    var urlRewriteExtension = ConfigurationManager.AppSettings["UrlRewriteExtension"];
    
    var currentArticle = article.Id + urlRewriteExtension;
    var activityType = Request["type"];
}

<link href="~/Scripts/jiathis/jiathis-share.css" rel="stylesheet">
<script type="text/javascript" src="~/Scripts/jiathis/jiathis-share.js" charset="utf-8"></script>
<script type="text/javascript" src="http://v3.jiathis.com/code_mini/jia.js?uid=2107415" charset="utf-8"></script>

<style>
    img {
        max-width: 100%;
        height: auto;
    }
</style>
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h3>
                <a class="customer-content-xs" href="/">首页</a> » 
                <a class="customer-content-xs" href="@string.Format("/activity/{0}{1}",activityType,urlRewriteExtension)">@Common.Dic_ArticleType[activityType.ToLower()]</a> » 
                <a class="customer-content-xs" href="@string.Format("/activity/{0}/{1}",activityType,currentArticle)">@article.SubTitle</a>

            </h3>
            <!-- share -->
            <div onmouseover="setShare('@article.Id')">

                <div class="jiathis_style">
                    <a href="http://www.jiathis.com/share?uid=2107415" class="jiathis jiathis_txt" target="_blank">
                        <img src="~/img/logos/share.gif" border="0" />
                    </a>
                    <a class="jiathis_counter_style_margin:3px 0 0 2px"></a>
                </div>
            </div>
            

        </div>
        <div class="col-md-12">
            @if (article.IsHref)
            {
                <h4><a href="@article.Href"><i class="fa fa-arrow-right"></i>文章链接</a></h4> 
                <iframe src="@article.Href" id="iframepage" name="iframepage"
                        frameborder=0 style="width:100%; min-height:1000px" ></iframe>

            }
            else
            {
                @Html.Raw(article.Content)
                
            }

        </div>
        <div style="padding:50px 0px;">
            @if (previousArticle != null)
            {
                var preArticle = previousArticle.Id + urlRewriteExtension;
                <div>上一篇：
                    <a class="customer-content-xs" href="/activity/@activityType/@preArticle">@previousArticle.SubTitle</a>
                </div>
                
            }
            
            @if (nextArticle != null)
            {
                var nexArticle = nextArticle.Id + urlRewriteExtension;
                <div>
                    下一篇：
                    <a class="customer-content-xs" href="/activity/@activityType/@nexArticle">@nextArticle.SubTitle</a>
                </div>

            }
        </div>
    </div>
    
    
</div>
<script>

</script>

